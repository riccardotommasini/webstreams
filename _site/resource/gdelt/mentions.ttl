@prefix docker: <https://www.linkeddata.stream/ontologies/docker> .

:mentions a vocals:StreamDescriptor ;
        dcat:dataset :gkgstream  ;
        dcat:title "GDELT Mention Stream"^^xsd:string ;
        dcat:description "GDELT Mention Stream"^^xsd:string ;
        dcat:publisher <http://www.linkeddata.stream/about> ;
        dcat:license <https://creativecommons.org/licenses/by-nc/4.0/> .

:mentionsstream a vocals:RDFStream ;
        vocals:windowType vocals:logicalTumbling ;
        vocals:windowSize "PT15M"^^xsd:duration ;
        vocals:hasEndpoint <ws://localhost:8080/mentions> .

<ws://localhost:8080/mentions>  a vocals:StreamEndpoint ;
                docker:image "streamreasoning/webstreams_gdelt_mentions"^^xsd:string ;
                docker:home "https://hub.docker.com/repository/docker/streamreasoning/webstreams_gdelt_mentions";
                dcat:format frmt:JSON-LD;
                dcat:accessURL "ws://localhost:8080/gkg"  .
